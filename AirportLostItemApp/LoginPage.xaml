<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirportLostItemApp.LoginPage"
             BackgroundColor="#1565C0"> <VerticalStackLayout VerticalOptions="Center" Spacing="20" Padding="30">

        <Label Text="✈️" FontSize="80" HorizontalOptions="Center"/>
        <Label Text="HAVAALANI" FontSize="30" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"/>
        <Label Text="Kayıp Eşya Sistemi" TextColor="#E3F2FD" HorizontalOptions="Center"/>

        <Frame CornerRadius="15" BackgroundColor="White" Padding="20" Margin="0,30,0,0">
            <VerticalStackLayout Spacing="15">
                <Entry Placeholder="Kullanıcı Adı" TextColor="Black"/>
                <Entry Placeholder="Şifre" IsPassword="True" TextColor="Black"/>
                
                <Button Text="GİRİŞ YAP" 
                        Clicked="OnLoginClicked"
                        BackgroundColor="#1565C0" 
                        TextColor="White" 
                        FontAttributes="Bold"/>
            </VerticalStackLayout>
        </Frame>

        <Label Text="Şifremi Unuttum" TextColor="White" TextDecorations="Underline" HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>