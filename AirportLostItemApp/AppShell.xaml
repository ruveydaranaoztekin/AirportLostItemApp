    xmlns:local="clr-namespace:AirportLostItemApp"
    Title="Buldum! ✈️ Airport">

    <TabBar>
        <ShellContent Title="Vitrin" 
                      Icon="{OnPlatform 'home.png', iOS='home.png', MacCatalyst='home.png'}"
