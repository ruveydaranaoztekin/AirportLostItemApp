<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirportLostItemApp.MainPage"
             Title="İlan Ekle"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <Label Text="Kayıp Eşya Bildirim Formu" FontSize="24" FontAttributes="Bold" TextColor="#0056D2"/>
            <Label Text="Lütfen eşyanın bulunmasını kolaylaştırmak için tüm detayları giriniz." FontSize="13" TextColor="Gray"/>

            <Frame Padding="15" CornerRadius="12" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="📦 Eşya Bilgileri" FontAttributes="Bold" TextColor="#333"/>
                    
                    <Entry x:Name="NameEntry" Placeholder="Eşya Adı (Örn: Siyah Deri Cüzdan)" />
                    
                    <Picker x:Name="CategoryPicker" Title="Kategori Seçin">
                        <Picker.Items>
                            <x:String>Elektronik</x:String>
                            <x:String>Bavul</x:String>
                            <x:String>Pasaport</x:String>
                            <x:String>Cüzdan/Çanta</x:String>
                            <x:String>Giyim</x:String>
                            <x:String>Diğer</x:String>
                        </Picker.Items>
                    </Picker>

                    <Grid ColumnDefinitions="*,*">
                         <Label Text="Aciliyet:" VerticalOptions="Center"/>
                         <HorizontalStackLayout Grid.Column="1" Spacing="10">
                             <RadioButton x:Name="RadioNormal" Content="Normal" IsChecked="True"/>
                             <RadioButton x:Name="RadioUrgent" Content="ACİL" TextColor="Red"/>
                         </HorizontalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="15" CornerRadius="12" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="📍 Konum ve Zaman" FontAttributes="Bold" TextColor="#333"/>
                    
                    <Entry x:Name="LocationEntry" Placeholder="Nerede Kayboldu? (Örn: Gate A1, Tuvalet)" />
                    
                    <Label Text="Kaybolma Tarihi:" FontSize="12" TextColor="Gray"/>
                    <DatePicker x:Name="DateInput" Format="dd/MM/yyyy" TextColor="#333"/>
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="15" CornerRadius="12" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="📝 Detaylar &amp; Özellikler" FontAttributes="Bold" TextColor="#333"/>
                    
                    <Editor x:Name="DescriptionEditor" 
                            Placeholder="Ayırt edici özellikleri neler? (Örn: Sol fermuarı bozuk, üzerinde 'Can' yazıyor, ekranı çatlak...)" 
                            HeightRequest="100" 
                            AutoSize="TextChanges"/>

                    <Button Text="📷 Fotoğraf Yükle" 
                            BackgroundColor="#E0E0E0" 
                            TextColor="#333" 
                            CornerRadius="8"
                            HeightRequest="40"/>
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="15" CornerRadius="12" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="👋 Bulan Kişiye Not" FontAttributes="Bold" TextColor="#333"/>
                    
                    <Entry x:Name="NoteEntry" Placeholder="Örn: Benim için manevi değeri çok yüksek, lütfen..." />
                </VerticalStackLayout>
            </Frame>

            <Button Text="İlanı Yayınla" 
                    Clicked="OnSaveClicked"
                    BackgroundColor="#0056D2" 
                    TextColor="White" 
                    CornerRadius="10" 
                    HeightRequest="55" 
                    FontAttributes="Bold"
                    Margin="0,0,0,20"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>